{
  "version": "0.2.0",
  "configurations": [
  {
      "name": "Debug Open Ruby File",
      "type": "Ruby",
      "request": "launch",
      "cwd": "${workspaceRoot}",
      "program": "${file}"
  },
  {
    "name": "Debug Ruby Test File",
    "type": "Ruby",
    "request": "launch",
    "cwd": "${workspaceRoot}",           
    "program": "${file}",
    "includes": ["test", "lib"]
  },
  {
    "name": "Debug Highlighted Ruby Test",
    "type": "Ruby",
    "request": "launch",
    "cwd": "${workspaceRoot}",           
    "program": "${file}",
    "args": [
         "-n", "/test_[0-9]{4}_${selectedText}/"
    ]
  }
]
}