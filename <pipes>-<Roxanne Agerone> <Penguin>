#Should be instantiated with a name
#Should be able to read the penguins name but not write it (hint: use one of the attrs)
#Should have one method called looks that returns 'Fuzzy!

class Penguin
  attr_reader :name, :texture

  def initialize(name)
    @name = name
    @texture = "fuzzy"
  end

  def texture?
    return @texture
  end

  def name?
    return @name
  end
end

james_bond = Penguin.new("James Bond")


puts james_bond.texture
